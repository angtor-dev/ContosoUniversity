@page
@model ContosoUniversity.Pages.Instructors.IndexModel

@{
    ViewData["Title"] = "Instructores";
    ViewData["page"] = "instructors";
}

<h2>Instructores</h2>

<p>
    <a asp-page="Create">Registrar Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Fecha de Contraración</th>
            <th>Oficina</th>
            <th>Cursos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InstructorData.Instructors)
        {
            string selectedRow = "";
            if (item.ID == Model.InstructorID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HireDate)
                </td>
                <td>
                    @if (item.OfficeAssignment != null)
                    {
                        @item.OfficeAssignment.Location
                    }
                </td>
                <td>
                    @{
                        foreach (var course in item.Courses)
                        {
                            @course.CourseID @:  @course.Title <br />
                        }
                    }
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID" asp-route-p="@Model.PageIndex">Seleccionar</a> |
                    <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Detalles</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.InstructorData.Courses != null)
{
    <h3>Cursos Enseñados por el Instructor Seleccionado</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Número</th>
            <th>Titulo</th>
            <th>Departamento</th>
        </tr>

        @foreach (var item in Model.InstructorData.Courses)
        {
            string selectedRow = "";
            if (item.CourseID == Model.CourseID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    <a asp-page="./Index" asp-route-id="@Model.InstructorID" asp-route-courseID="@item.CourseID" asp-route-p="@Model.PageIndex">Seleccionar</a>
                </td>
                <td>
                    @item.CourseID
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Department.Name
                </td>
            </tr>
        }

    </table>
}

@if (Model.InstructorData.Enrollments != null)
{
    <h3>
        Estudiantes Inscritos en el Curso Seleccionado
    </h3>
    <table class="table">
        <tr>
            <th>Nombre</th>
            <th>Calificación</th>
        </tr>
        @foreach (var item in Model.InstructorData.Enrollments)
        {
            <tr>
                <td>
                    @item.Student.FullName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
            </tr>
        }
    </table>
}

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

@if (Model.InstructorID == 0)
{
    <a asp-page="./Index"
       asp-route-p="@(Model.PageIndex - 1)"
       class="btn btn-primary @prevDisabled">
        Anterior
    </a>
    <a asp-page="./Index"
       asp-route-p="@(Model.PageIndex + 1)"
       class="btn btn-primary @nextDisabled">
        Siguiente
    </a>
} else {
    <a asp-page="./Index"
       asp-route-p="@Model.PageIndex"
       class="btn btn-primary">
        Regresar
    </a>
}